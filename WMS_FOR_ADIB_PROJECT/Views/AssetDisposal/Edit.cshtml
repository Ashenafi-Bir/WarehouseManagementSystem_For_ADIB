@model WMS_FOR_ADIB.Models.AssetDisposal

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Asset Disposal</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="DisposalID" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Quantity" class="form-control border-0 shadow" />
                    <label asp-for="Quantity" class="ms-2"></label>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DateDisposed" type="date" class="form-control border-0 shadow" />
                    <label asp-for="DateDisposed" class="ms-2"></label>
                    <span asp-validation-for="DateDisposed" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Reason" class="form-control border-0 shadow" />
                    <label asp-for="Reason" class="ms-2"></label>
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisposedBy" class="form-control border-0 shadow" />
                    <label asp-for="DisposedBy" class="ms-2"></label>
                    <span asp-validation-for="DisposedBy" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ApprovedBy" class="form-control border-0 shadow" />
                    <label asp-for="ApprovedBy" class="ms-2"></label>
                    <span asp-validation-for="ApprovedBy" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary your-class form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="AssetDisposal" asp-action="Index" class="btn btn-secondary  text-dark border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
