@model WMS_FOR_ADIB.Models.Item

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-yellow bg-main py-2">Create Item</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Create" method="post" class="row">
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Unit" class="form-control border-0 shadow" />
                    <label asp-for="Unit" class="ms-2"></label>
                    <span asp-validation-for="Unit" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Quantity" class="form-control border-0 shadow" />
                    <label asp-for="Quantity" class="ms-2"></label>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="UnitPrice" class="form-control border-0 shadow" />
                    <label asp-for="UnitPrice" class="ms-2"></label>
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="POId" class="form-control border-0 shadow" />
                    <label asp-for="POId" class="ms-2"></label>
                    <span asp-validation-for="POId" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control your-class">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Item" asp-action="Index" class="btn btn-outline-primary text-dark border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
