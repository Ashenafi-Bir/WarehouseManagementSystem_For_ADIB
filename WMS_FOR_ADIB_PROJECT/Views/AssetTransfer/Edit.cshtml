@model WMS_FOR_ADIB.Models.AssetTransfer

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Asset Transfer</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="TransferID" hidden />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="FromBranchCode" class="form-control border-0 shadow" />
                    <label asp-for="FromBranchCode" class="ms-2"></label>
                    <span asp-validation-for="FromBranchCode" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ToBranchCode" class="form-control border-0 shadow" />
                    <label asp-for="ToBranchCode" class="ms-2"></label>
                    <span asp-validation-for="ToBranchCode" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Quantity" class="form-control border-0 shadow" />
                    <label asp-for="Quantity" class="ms-2"></label>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DateTransferred" type="date" class="form-control border-0 shadow" />
                    <label asp-for="DateTransferred" class="ms-2"></label>
                    <span asp-validation-for="DateTransferred" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Status" class="form-control border-0 shadow" />
                    <label asp-for="Status" class="ms-2"></label>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="RequestedBy" class="form-control border-0 shadow" />
                    <label asp-for="RequestedBy" class="ms-2"></label>
                    <span asp-validation-for="RequestedBy" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ApprovedBy" class="form-control border-0 shadow" />
                    <label asp-for="ApprovedBy" class="ms-2"></label>
                    <span asp-validation-for="ApprovedBy" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ReceivedBy" class="form-control border-0 shadow" />
                    <label asp-for="ReceivedBy" class="ms-2"></label>
                    <span asp-validation-for="ReceivedBy" class="text-danger"></span>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary your-class form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="AssetTransfer" asp-action="Index" class="btn btn-secondary  text-dark border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
