@model List<WMS_FOR_ADIB.Models.AssetRequistion>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-yellow bg-main py-2">Asset Requisition List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="AssetRequisition" asp-action="Create" class="btn your-class bg-main btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Asset Requisition
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Request Date</th>
                    <th>Branch Code</th>
                    <th>Requested By</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var assetRequisition in Model.OrderBy(ar => ar.RequisitionID))
                {
                    <tr>
                        <td>@assetRequisition.DateRequested.ToShortDateString()</td>
                        <td>@assetRequisition.BranchCode</td>
                        <td>@assetRequisition.RequestedBy</td>
                        <td>@assetRequisition.Status</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="AssetRequisition" asp-action="Edit" asp-route-id="@assetRequisition.RequisitionID" class="btn btn-sm btn-primary mx-1 text-light">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="AssetRequisition" asp-action="Delete" asp-route-id="@assetRequisition.RequisitionID" class="btn btn-sm btn-danger mx-1 text-light">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                                <a asp-controller="AssetRequisition" asp-action="Details" asp-route-id="@assetRequisition.RequisitionID" class="btn btn-sm btn-info mx-1 text-light">
                                    <i class="bi bi-eye-fill"></i> Details
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
