@{
    ViewData["Title"] = "Home Page";
}

<style>
    .bg-image {
        background-image: url('/images/wh1.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        height: 100vh;
        padding: 20px;
    }

    .dashboard-box {
        background-color: rgba(255, 255, 255, 0.1); /* Adjust alpha (fourth parameter) for transparency */
        padding: 20px;
        border-radius: 10px;
        backdrop-filter: blur(10px); /* Optional: adds a blur effect to the background */
    }
</style>

<div class="bg-image">
    <div class="card shadow border-0 mt-4 dashboard-box">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-yellow bg-main py-2">Warehouse Management Dashboard</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-3 mb-3">
                    <a asp-area="AssetDisposal" asp-controller="AssetDisposal" asp-action="Index" class="btn btn-block btn-primary">
                        <i class="bi bi-trash"></i> Asset Disposals
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a asp-area="AssetReturn" asp-controller="AssetReturn" asp-action="Index" class="btn btn-block btn-info">
                        <i class="bi bi-arrow-return-left"></i> Asset Returns
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a asp-area="AssetTransfer" asp-controller="AssetTransfer" asp-action="Index" class="btn btn-block btn-warning">
                        <i class="bi bi-arrow-right-circle"></i> Asset Transfers
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a asp-area="AssetRequistion" asp-controller="AssetRequisition" asp-action="Index" class="btn btn-block btn-success">
                        <i class="bi bi-list-check"></i> Asset Requisitions
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a asp-area="PurchaseOrder" asp-controller="PurchaseOrder" asp-action="Index" class="btn btn-block btn-secondary">
                        <i class="bi bi-cart-plus"></i> Purchase Orders
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a asp-area="Supplier" asp-controller="Supplier" asp-action="Index" class="btn btn-block btn-danger">
                        <i class="bi bi-people"></i> Suppliers
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a asp-area="PurchaseRequistion" asp-controller="PurchaseRequisition" asp-action="Index" class="btn btn-block btn-info">
                        <i class="bi bi-journal"></i> Purchase Requisitions
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a asp-controller="Item" asp-action="Index" class="btn btn-block btn-primary">
                        <i class="bi bi-box"></i> Items
                    </a>
                </div>
                <div class="col-md-3 mb-3">
                    <a asp-controller="Branch" asp-action="Index" class="btn btn-block btn-warning">
                        <i class="bi bi-building"></i> Branches
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
