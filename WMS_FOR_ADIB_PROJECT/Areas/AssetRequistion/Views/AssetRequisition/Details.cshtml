@model WMS_FOR_ADIB.Models.AssetRequistion

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-yellow bg-main py-2">Asset Requisition Details</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <dl class="row">
            <dt class="col-sm-4">Branch Code</dt>
            <dd class="col-sm-8">@Model.BranchCode</dd>

            <dt class="col-sm-4">Quantity</dt>
            <dd class="col-sm-8">@Model.Quantity</dd>

            <dt class="col-sm-4">Requested By</dt>
            <dd class="col-sm-8">@Model.RequestedBy</dd>

            <dt class="col-sm-4">Date Requested</dt>
            <dd class="col-sm-8">@Model.DateRequested</dd>

            <dt class="col-sm-4">Approved By</dt>
            <dd class="col-sm-8">@Model.ApprovedBy</dd>

            <dt class="col-sm-4">Issued By</dt>
            <dd class="col-sm-8">@Model.IssuedBy</dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">@Model.Status</dd>
        </dl>
        <div class="mb-3">
            <a asp-controller="AssetRequisition" asp-action="Edit" asp-route-id="@Model.RequisitionID" class="btn your-class btn-primary">Edit</a>
            <a asp-controller="AssetRequisition" asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
