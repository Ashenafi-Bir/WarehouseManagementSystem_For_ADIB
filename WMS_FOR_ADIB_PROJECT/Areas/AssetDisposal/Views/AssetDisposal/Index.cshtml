@model List<WMS_FOR_ADIB.Models.AssetDisposal>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-yellow bg-main py-2">Asset Disposal List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="AssetDisposal" asp-action="Create" class="btn your-class bg-main btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Asset Disposal
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Disposed Date</th>
                    <th>Quantity</th>
                    <th>Disposed By</th>
                    <th>Approved By</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var assetDisposal in Model.OrderBy(ad => ad.DisposalID))
                {
                    <tr>
                        <td>@assetDisposal.DateDisposed.ToShortDateString()</td>
                        <td>@assetDisposal.Quantity</td>
                        <td>@assetDisposal.DisposedBy</td>
                        <td>@assetDisposal.ApprovedBy</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="AssetDisposal" asp-action="Edit" asp-route-id="@assetDisposal.DisposalID" class="btn btn-sm btn-primary mx-1 text-light">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="AssetDisposal" asp-action="Delete" asp-route-id="@assetDisposal.DisposalID" class="btn btn-sm btn-danger mx-1 text-light">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                                <a asp-controller="AssetDisposal" asp-action="Details" asp-route-id="@assetDisposal.DisposalID" class="btn btn-sm btn-info mx-1 text-light">
                                    <i class="bi bi-eye-fill"></i> Details
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
