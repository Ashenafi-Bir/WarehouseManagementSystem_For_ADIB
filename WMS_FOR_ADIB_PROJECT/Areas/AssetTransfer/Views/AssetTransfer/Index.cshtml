@model List<WMS_FOR_ADIB.Models.AssetTransfer>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-yellow bg-main py-2">Asset Transfer List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="AssetTransfer" asp-action="Create" class="btn your-class bg-main btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Asset Transfer
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Transfer Date</th>
                    <th>From Branch</th>
                    <th>To Branch</th>
                    <th>Quantity</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var assetTransfer in Model.OrderBy(at => at.TransferID))
                {
                    <tr>
                        <td>@assetTransfer.DateTransferred.ToShortDateString()</td>
                        <td>@assetTransfer.FromBranchCode</td>
                        <td>@assetTransfer.ToBranchCode</td>
                        <td>@assetTransfer.Quantity</td>
                        <td>@assetTransfer.Status</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="AssetTransfer" asp-action="Edit" asp-route-id="@assetTransfer.TransferID" class="btn btn-sm btn-primary mx-1 text-light">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="AssetTransfer" asp-action="Delete" asp-route-id="@assetTransfer.TransferID" class="btn btn-sm btn-danger mx-1 text-light">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                                <a asp-controller="AssetTransfer" asp-action="Details" asp-route-id="@assetTransfer.TransferID" class="btn btn-sm btn-info mx-1 text-light">
                                    <i class="bi bi-eye-fill"></i> Details
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
