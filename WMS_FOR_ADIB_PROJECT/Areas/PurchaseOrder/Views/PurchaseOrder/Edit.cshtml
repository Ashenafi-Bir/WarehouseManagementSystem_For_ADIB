@model WMS_FOR_ADIB.Models.PurchaseOrder

<form asp-controller="PurchaseOrder" asp-action="Edit" method="post" class="mt-4">
    <input type="hidden" asp-for="POId" />
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-yellow bg-main py-2">Edit Purchase Order</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <!-- Form fields for Purchase Order -->
            <div class="mb-3">
                <label asp-for="PONumber" class="form-label"></label>
                <input asp-for="PONumber" class="form-control" />
                <span asp-validation-for="PONumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PRNumber" class="form-label"></label>
                <input asp-for="PRNumber" class="form-control" />
                <span asp-validation-for="PRNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SupplierID" class="form-label"></label>
                <input asp-for="SupplierID" class="form-control" />
                <span asp-validation-for="SupplierID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Date" class="form-label"></label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <!-- Add other fields as needed -->

            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>
