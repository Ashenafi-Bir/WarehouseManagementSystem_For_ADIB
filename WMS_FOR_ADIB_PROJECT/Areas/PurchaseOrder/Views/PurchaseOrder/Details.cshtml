@model WMS_FOR_ADIB.Models.PurchaseOrder

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-yellow bg-main py-2">Purchase Order Details</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <dl class="row">
            <dt class="col-sm-3">PO Number</dt>
            <dd class="col-sm-9">@Model.PONumber</dd>

            <dt class="col-sm-3">PR Number</dt>
            <dd class="col-sm-9">@Model.PRNumber</dd>

            <dt class="col-sm-3">Supplier Name</dt>
            <dd class="col-sm-9">@Model.SupplierName</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>

            <dt class="col-sm-3">Ordered By</dt>
            <dd class="col-sm-9">@Model.OrderedBy</dd>

            <dt class="col-sm-3">Authorized By</dt>
            <dd class="col-sm-9">@Model.AuthorizedBy</dd>

            <!-- Add other details as needed -->

        </dl>
        <div class="text-end">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
