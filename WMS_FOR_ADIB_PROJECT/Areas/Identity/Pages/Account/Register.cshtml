@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-md-10">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="border p-4 shadow">
            <h2 class="card-header text-center text-yellow bg-main">Create New User</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FullName" class="form-control" autocomplete="full-name" placeholder="Full Name" />
                <label asp-for="Input.FullName">Full Name</label>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.EmployeeId" class="form-control" autocomplete="employee-id" placeholder="Employee ID" />
                <label asp-for="Input.EmployeeId">Employee ID</label>
                <span asp-validation-for="Input.EmployeeId" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.UserName" class="form-control" autocomplete="username" placeholder="Username" />
                <label asp-for="Input.UserName">Username</label>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm Password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3 col-md-6">
                <label asp-for="Input.BranchId">Branch</label>
                <select asp-for="Input.BranchId" class="form-select" asp-items="@(Model.Input?.BranchList ?? Enumerable.Empty<SelectListItem>())">
                    <option value="">Select Branch</option>
                </select>
                <span asp-validation-for="Input.BranchId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label>Roles</label>
                <div>
                    @if (Model.Input?.RoleList != null)
                    {
                        foreach (var role in Model.Input.RoleList)
                        {
                            <div class="form-check">
                                <input type="checkbox" name="Input.Roles" value="@role.Value" class="form-check-input" />
                                <label class="form-check-label">@role.Text</label>
                            </div>
                        }
                    }
                </div>
            </div>

            <button id="registerSubmit" type="submit" class="btn col-md-6 mb-3 btn-lg your-class btn-primary">Register</button>

            <div class="row mt-3">
                <div class="col-md-6 mb-3">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary text-dark border form-control">Back to Home</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
