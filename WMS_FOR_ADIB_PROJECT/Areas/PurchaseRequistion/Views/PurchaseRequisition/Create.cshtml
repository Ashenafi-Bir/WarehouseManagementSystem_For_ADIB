@model WMS_FOR_ADIB.Models.PurchaseRequisition

<form asp-action="Create" method="post" class="mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-yellow bg-main py-2">Create Purchase Requisition</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <!-- Form fields -->
            <div class="mb-3">
                <label asp-for="PRNumber" class="form-label"></label>
                <input asp-for="PRNumber" class="form-control" />
                <span asp-validation-for="PRNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Date" class="form-label"></label>
                <input asp-for="Date" type="date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <!-- Remove the RequestedBy and AuthorizedBy fields from the form -->
            <!-- These fields will be automatically set in the controller -->
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control your-class">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="PurchaseRequisition" asp-action="Index" class="btn btn-outline-primary text-dark border form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
