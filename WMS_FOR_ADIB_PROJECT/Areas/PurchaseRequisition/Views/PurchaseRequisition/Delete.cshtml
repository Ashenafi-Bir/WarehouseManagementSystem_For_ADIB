@model WMS_FOR_ADIB.Models.PurchaseRequisition

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="bg-main text-yellow py-2">Delete Purchase Requisition</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="PRId" />
            <div class="border p-3 mt-4">
                <dl class="row">
                    <dt class="col-sm-4">Requisition Number</dt>
                    <dd class="col-sm-8">@Model.PRNumber</dd>

                    <dt class="col-sm-4">Date</dt>
                    <dd class="col-sm-8">@Model.Date.ToShortDateString()</dd>

                    <dt class="col-sm-4">Requested By</dt>
                    <dd class="col-sm-8">@Model.RequestedBy</dd>

                    <dt class="col-sm-4">Authorized By</dt>
                    <dd class="col-sm-8">@Model.AuthorizedBy</dd>
                </dl>

                <div class="row mt-4">
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-danger text-yellow form-control">Delete</button>
                    </div>
                    <div class="col-md-3">
                        <a asp-controller="PurchaseRequisition" asp-action="Index" class="btn btn-outline-primary text-dark border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
